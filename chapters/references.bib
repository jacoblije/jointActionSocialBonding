pages = {1331--6},
pmid = {22442371},
title = {{Wired to run: exercise-induced endocannabinoid signaling in humans and cursorial mammals with implications for the 'runner's high'.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22442371},
volume = {215},
year = {2012}
}
