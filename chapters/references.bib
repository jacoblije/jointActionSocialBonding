@article{Russell2014,
annote = {When people think about themselves in relation to their religion-specific cosmos, they are engaging in dynamic feedback loops between their own emotional states and the cognitivity inherent in their belief (Azari et al., 2005; for affect- belief feedback loops in general, see Boden {\&} Berenbaum, 2010)

