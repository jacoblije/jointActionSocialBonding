issn = {18737838},
journal = {Cognition},
keywords = {Co-representation,Development,Joint action},
number = {3},
pages = {269--279},
pmid = {24853630},
title = {{The development of co-representation effects in a joint task: Do children represent a co-actor?}},
volume = {132},
year = {2014}
}
