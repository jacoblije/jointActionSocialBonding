file = {:Users/jacob1/Library/Application Support/Mendeley Desktop/Downloaded/Silva et al. - 2014 - Numerical relations and skill level constrain co-adaptive behaviors of agents in sports teams.pdf:pdf},
isbn = {1932-6203},
